<Window x:Class="Landscaper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        WindowState="Maximized">
    <Window.Resources>
        <ResourceDictionary>
            <ImageSource x:Key="0">Content/Tiles/0.png</ImageSource>
            <ImageSource x:Key="1">Content/Tiles/1.png</ImageSource>
            <ImageSource x:Key="2">Content/Tiles/2.png</ImageSource>
            <ImageSource x:Key="3">Content/Tiles/3.png</ImageSource>
            <ImageSource x:Key="4">Content/Tiles/4.png</ImageSource>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        
        <ScrollViewer Grid.Column="0"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto">
            <Canvas Name="Map"
                    PreviewMouseDown="OnMouseDown" 
                    PreviewMouseUp="OnMouseUp"
                    MouseMove="OnMouseMove"
                    Background="Fuchsia" />
        </ScrollViewer>
        
        <StackPanel Grid.Column="1" 
                    Name="Toolbar">
            <Button Name="Selection"
                    PreviewMouseUp="OnToolbarSelect">
                <Label>Selection</Label>
            </Button>
            <Button Name="Draw"
                    PreviewMouseUp="OnToolbarSelect">
                <Label>Draw</Label>
            </Button>
            <Button Name="Paint"
                    PreviewMouseUp="OnToolbarSelect">
                <Label>Paint</Label>
            </Button>
            <Button Name="Remove"
                    PreviewMouseUp="OnToolbarSelect">
                <Label>Remove</Label>
            </Button>
            <Button Name="Wall"
                    PreviewMouseUp="OnToolbarSelect">
                <Label>Wall</Label>
            </Button>
            <Button Name="Door"
                    PreviewMouseUp="OnToolbarSelect">
                <Label>Door</Label>
            </Button>
        </StackPanel>
    </Grid>
</Window>