<Window x:Class="Landscaper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:Landscaper.Helpers"
        Title="Landscaper"
        WindowState="Maximized">
  
  <Window.Resources>
    <helpers:ImageToSourceConverter x:Key="ImageToSourceConverter"/>
  </Window.Resources>
  
  <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="150" />
        </Grid.ColumnDefinitions>
        
        <Menu Grid.Row="0"
              Grid.ColumnSpan="2">
            <MenuItem Header="File">
                <MenuItem Header="New" Click="OnNew" />
                <MenuItem Header="Save" Click="OnSave" />
                <MenuItem Header="Open" Click="OnOpen" />
                <MenuItem Header="Exit" Click="OnExit" />
            </MenuItem>
        </Menu>
        
        <ScrollViewer Grid.Row="1"
                      Grid.Column="0"
                      VerticalScrollBarVisibility="Visible"
                      HorizontalScrollBarVisibility="Visible">
            <Canvas Name="Map"
                    PreviewMouseDown="OnMouseDown" 
                    PreviewMouseUp="OnMouseUp"
                    MouseMove="OnMouseMove"
                    Background="Fuchsia" />
        </ScrollViewer>
        
        <StackPanel Grid.Row="1"
                    Grid.Column="1" 
                    Name="Toolbar">
            <TabControl>
                <TabItem Header="Tiles">
                    
                    <TabPanel>
                      
                    <ListBox x:Name="TilesListBox" PreviewMouseUp="SelectNewTileBrush">
                      <ListBox.ItemTemplate>
                        <DataTemplate>

                              <WrapPanel>
                                <Image Source="{Binding Path=Image, Converter={StaticResource ImageToSourceConverter}}" />
                                <Label Content="{Binding Path=Name}" />
                              </WrapPanel>

                        </DataTemplate>
                      </ListBox.ItemTemplate>
                    </ListBox>
                      
                    </TabPanel>
                  
                </TabItem>
                <TabItem Header="Items">
                    <TabPanel>
                        <Label>Put items here</Label>
                    </TabPanel>
                </TabItem>
            </TabControl>
        </StackPanel>

        <ToolBar Grid.Row="2"
                 Grid.Column="0"
                 Grid.ColumnSpan="2">
            <RadioButton Name="Move"
                         PreviewMouseUp="OnToolbarSelect">
                Move
            </RadioButton>
            <RadioButton Name="Selection"
                         PreviewMouseUp="OnToolbarSelect">
                Selection
            </RadioButton>
            <RadioButton Name="Draw"
                         PreviewMouseUp="OnToolbarSelect">
                Draw
            </RadioButton>
            <RadioButton Name="Paint"
                         PreviewMouseUp="OnToolbarSelect"
                         IsChecked="True">
                Paint
            </RadioButton>
            <RadioButton Name="Remove"
                         PreviewMouseUp="OnToolbarSelect">
                Remove
            </RadioButton>
            <RadioButton Name="Wall"
                         PreviewMouseUp="OnToolbarSelect">
                Wall
            </RadioButton>
            <RadioButton Name="Door"
                         PreviewMouseUp="OnToolbarSelect">
                Door
            </RadioButton>
            <Slider Name="ZoomSlider"
                    Maximum="4" 
                    Minimum=".1" 
                    Value="1" 
                    ValueChanged="ZoomSlider_OnValueChanged"
                    MouseDoubleClick="ZoomSlider_OnMouseDoubleClick"
                    Width="300" />
        </ToolBar>
    </Grid>
</Window>