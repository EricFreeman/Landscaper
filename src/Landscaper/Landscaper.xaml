<Window x:Class="Landscaper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Landscaper"
        WindowState="Maximized">
    <Window.Resources>
        <ResourceDictionary>
            <ImageSource x:Key="0">Content/Tiles/0.png</ImageSource>
            <ImageSource x:Key="1">Content/Tiles/1.png</ImageSource>
            <ImageSource x:Key="2">Content/Tiles/2.png</ImageSource>
            <ImageSource x:Key="3">Content/Tiles/3.png</ImageSource>
            <ImageSource x:Key="4">Content/Tiles/4.png</ImageSource>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="150" />
        </Grid.ColumnDefinitions>
        
        <Menu Grid.Row="0"
              Grid.ColumnSpan="2">
            <MenuItem Header="File">
                <MenuItem Header="New"/>
                <MenuItem Header="Save"/>
                <MenuItem Header="Open"/>
                <MenuItem Header="Exit"></MenuItem>
            </MenuItem>
        </Menu>
        
        <ScrollViewer Grid.Row="1"
                      Grid.Column="0"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto">
            <Canvas Name="Map"
                    PreviewMouseDown="OnMouseDown" 
                    PreviewMouseUp="OnMouseUp"
                    MouseMove="OnMouseMove"
                    Background="Fuchsia" />
        </ScrollViewer>
        
        <StackPanel Grid.Row="1"
                    Grid.Column="1" 
                    Name="Toolbar">
            <TabControl>
                <TabItem Header="Tools">
                    <TabPanel>
                        <StackPanel Width="140">
                            <RadioButton Name="Selection"
                                         PreviewMouseUp="OnToolbarSelect"
                                         Style="{StaticResource {x:Type ToggleButton}}">
                                <Label>Selection</Label>
                            </RadioButton>
                            <RadioButton Name="Draw"
                                         PreviewMouseUp="OnToolbarSelect"
                                         Style="{StaticResource {x:Type ToggleButton}}">
                                <Label>Draw</Label>
                            </RadioButton>
                            <RadioButton Name="Paint"
                                         PreviewMouseUp="OnToolbarSelect"
                                         Style="{StaticResource {x:Type ToggleButton}}"
                                         IsChecked="True">
                                <Label>Paint</Label>
                            </RadioButton>
                            <RadioButton Name="Remove"
                                          PreviewMouseUp="OnToolbarSelect"
                                          Style="{StaticResource {x:Type ToggleButton}}">
                                <Label>Remove</Label>
                            </RadioButton>
                            <RadioButton Name="Wall"
                                          PreviewMouseUp="OnToolbarSelect"
                                          Style="{StaticResource {x:Type ToggleButton}}">
                                <Label>Wall</Label>
                            </RadioButton>
                            <RadioButton Name="Door"
                                          PreviewMouseUp="OnToolbarSelect"
                                          Style="{StaticResource {x:Type ToggleButton}}">
                                <Label>Door</Label>
                            </RadioButton>
                        </StackPanel>
                    </TabPanel>
                </TabItem>
                <TabItem Header="Tiles">
                    <TabPanel>
                        <Label>Put tiles here</Label>
                    </TabPanel>    
                </TabItem>
                <TabItem Header="Items">
                    <TabPanel>
                        <Label>Put items here</Label>
                    </TabPanel>
                </TabItem>
            </TabControl>
        </StackPanel>
    </Grid>
</Window>